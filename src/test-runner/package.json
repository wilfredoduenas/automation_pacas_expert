    "serve": "node -r ts-node/register --loader ts-node/esm server.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "playwright",
    "testing",
    "test-runner",
    "ui",
    "automation",
    "nodejs"
  ],
  "author": "Test Runner Team",
  "license": "MIT"
}
