{
  "name": "test-runner",
  "version": "1.0.0",
  "description": "Professional Test Runner Interface for Playwright",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node --esm server.ts",
